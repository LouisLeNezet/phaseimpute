/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/

process {

    withName: 'BCFTOOLS_INDEX' {
            ext.args     = {[
                            "--tbi",
                            ].join(" ").trim()}
        }


    withName: 'BCFTOOLS_CONCAT' {
        ext.args = {[
            "--ligate",
            "--output-type z",
        ].join(" ").trim()}
    }

}
